<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :last_name,
                :as => :string,
                required: true,
                autofocus: true,
                label: false,
                placeholder: "Votre nom" %>
    <%= f.input :first_name,
                :as => :string,
                required: true,
                autofocus: true,
                label: false,
                placeholder: "Votre prÃ©nom" %>
    <%= f.input :address,
                :as => :string,
                required: true,
                autofocus: true,
                label: false,
                placeholder: "Votre adresse" %>
    <%= f.input :post_code,
                :as => :string,
                required: true,
                autofocus: true,
                label: false,
                placeholder: "Votre code postal" %>
    <%= f.input :city,
                required: true,
                autofocus: true,
                label: false,
                placeholder: "Votre ville" %>
    <% if current_user && current_user.profile && current_user.profile.statut == "admin"%>
      <%= f.input :statut,
                  collection: ['admin','autor','client','clientpaid'],
                  required: true,
                  autofocus: true,
                  label: false,
                  placeholder: "Statut" %>
    <% else%>
      <%= f.hidden_field :statut, :value => "client"%>
    <%end%>
    <%= f.input :country, :as => :string, required: true, autofocus: true, label: false, placeholder: "Votre pays"%>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <div class="form-actions">
      <%= f.button :submit ,"Sauvegarder", class:'btn btn-secondary'%>
  </div>
<%end%>
